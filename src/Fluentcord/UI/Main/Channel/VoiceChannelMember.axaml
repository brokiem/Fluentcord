<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:guildChannels="clr-namespace:Fluentcord.Models.GuildChannels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Fluentcord.UI.Main.Channel.VoiceChannelMember"
             x:DataType="guildChannels:VoiceChannelMemberModel">
    <Design.DataContext>
        <guildChannels:VoiceChannelMemberModel />
    </Design.DataContext>

    <ListBoxItem
        MinHeight="36" Padding="0"
        BorderThickness="0"
        Margin="40,0,7,0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Left"
        IsVisible="{Binding !IsHidden}">
        <RelativePanel
            VerticalAlignment="Center"
            Margin="0,0,8,0">
            <StackPanel
                Margin="6,0,11,0"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Spacing="7">
                <Border
                    CornerRadius="9999"
                    Margin="1"
                    VerticalAlignment="Center"
                    ClipToBounds="True">
                    <Image
                        x:Name="UserIcon"
                        Height="24"
                        Width="24"
                        asyncImageLoader:ImageLoader.Source="{Binding AvatarUrl, Mode=OneTime}" />
                </Border>
                <TextBlock
                    RelativePanel.RightOf="UserIcon"
                    Margin="0,0,0,1"
                    MaxWidth="95"
                    Text="{Binding Name}"
                    TextTrimming="CharacterEllipsis"
                    FontSize="14"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <StackPanel
                RelativePanel.AlignRightWithPanel="True"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Spacing="7">
                <controls:FontIcon
                    x:Name="VoiceMuteIcon"
                    IsVisible="{Binding IsSelfMuted}"
                    Glyph="&#xF781;"
                    FontSize="14"
                    Margin="0,4,0,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                <controls:FontIcon
                    x:Name="VoiceSpeakerIcon"
                    IsVisible="{Binding IsSelfDeafened}"
                    Glyph="&#xE74F;"
                    FontSize="18"
                    Margin="0,4,0,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </RelativePanel>
    </ListBoxItem>
</UserControl>